{
  "comment": "Inherits rules from Fortran90.",
  "name": "Leo Body Fortran",
  "scopeName": "source.leobody.fortran",
  "injections": {
    "source.leobody.fortran - ( string | comment )": {
      "patterns": [
        {
          "include": "#line-header"
        },
        {
          "include": "#line-end-comment"
        }
      ]
    }
  },
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#line-header"
    },
    {
      "include": "source.leobody.fortran90"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.fortran",
          "begin": "^[cC\\*]",
          "end": "\\n"
        },
        {
          "name": "comment.line.fortran",
          "begin": "^ *!",
          "end": "\\n"
        }
      ]
    },
    "line-end-comment": {
      "name": "comment.line-end.fortran",
      "begin": "(?<=^.{72})(?!\\n)",
      "end": "(?=\\n)"
    },
    "line-header": {
      "match": "^(?!\\s*[!#])(?:([ \\d]{5} )|( {5}.)|(\\t)|(.{1,5}))",
      "captures": {
        "1": {
          "name": "constant.numeric.fortran"
        },
        "2": {
          "name": "keyword.line-continuation-operator.fortran"
        },
        "3": {
          "name": "source.fortran.free"
        },
        "4": {
          "name": "invalid.error.fortran"
        }
      }
    }
  }
}