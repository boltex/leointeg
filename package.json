{
  "name": "leointeg",
  "displayName": "leointeg",
  "description": "Leo Editor Integration with VS Code",
  "version": "0.1.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boltex/leointeg"
  },
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:leointeg.openLeoFile",
    "onView:leoIntegration"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leoIntegrationView",
          "title": "Leo",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "leoIntegrationView": [
        {
          "id": "leoIntegration",
          "name": "Outline"
        }
      ]
    },
    "commands": [
      {
        "command": "leointeg.openLeoFile",
        "title": "Open Leo File",
        "icon": {
          "light": "resources/light/folder.svg",
          "dark": "resources/dark/folder.svg"
        }
      },
      {
        "command": "leointeg.test",
        "title": "Test Leo Integration"
      },
      {
        "command": "leointeg.killLeo",
        "title": "Kill Leo Integration"
      },
      {
        "command": "leointeg.selectNode",
        "title": "Select Node"
      },
      {
        "command": "leointeg.editHeadline",
        "title": "Edit Headline"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "leointeg.openLeoFile",
          "when": "view == leoIntegration",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "leointeg.editHeadline",
        "key": "ctrl+f1",
        "mac": "cmd+f1"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.0.2"
  }
}
